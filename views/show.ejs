<%include ./partials/header%>
    <div class='ui text main container'>
        <div class='ui segment'>
            <div class='ui huge header '>
                <%=blog.title%>
            </div>
            <img class='ui image centered' src='<%=blog.image%>'></img>
            <%=blog.created.toDateString()%>
            <p>
            <%=blog.body%>
            </p>
            <a href='/blogs/<%=blog._id%>/edit' class='ui inverted yellow button'>Edit</a>
            <form class='deleteForm' action='/blogs/<%=blog.id%>?_method=DELETE' method='POST'>
                <button class='ui inverted red button'>Delete</button>
            </form>

        </div>
    </div>

<%include ./partials/footer%>